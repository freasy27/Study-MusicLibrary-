@model Customer

    <div class="">
        <form asp-controller="Customer" asp-action="Create" method="post" class="form-horizontal" role="form">
            <h3 class="col-md-6">Create new customer</h3>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2"></label>
                <div class="col-md-4">
                    <input asp-for="Name" class="form-control" placeholder="Enter customers name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-secondary" type="submit" value="Return" asp-controller="Customer" asp-action="List" />
                    <input class="btn btn-success" type="submit" value="Create" />
                </div>
            </div>
        </form>
    </div>