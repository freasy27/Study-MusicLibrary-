@model IEnumerable<Music>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Authors name</th>
            <th>Lend a book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Music music in Model)
        {
        <tr>
            <td>@music.MusicID</td>
            <td>@music.Title</td>
            <td>@music.Author.Name</td>
            <td><a class="btn btn-success" asp-area="" asp-controller="Lend" asp-action="LendMusic" asp-route-musicID="@music.MusicID">Lend</a></td>
        </tr>
            
        }
    </tbody>
</table>