@model LendViewModel
<div >
    <form asp-controller="Lend" asp-action="LendMusic" method="post" class="form-inline" role="form">
        <h3 class="col-md-2">Lend a book</h3>
        @Html.HiddenFor(m => Model.Music.MusicID)
        <div class="form-group">
            <label asp-for="Music.Borrower" class="col-md-2 form-inline"></label>
            <div class="col-md-6 col-lg-6 col-sm-6">

                @Html.DropDownListFor(m => m.Music.BorrowerID,
                    new SelectList(Model.Customers.Select(x => new { Value = x.CustomerID, Text = x.Name }), "Value", "Text", 
                    "Select Customer"),
                    htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group offset-2 col-md-6">
                <input class="btn btn-outline-primary" type="submit" value="Return" asp-controller="Lend" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Lend" />
            </div>
        </div>
    </form>
</div>