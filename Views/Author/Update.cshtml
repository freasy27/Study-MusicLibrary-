@model Author

<div class="">
    <form asp-controller="Author" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-12" style="margin-top:50px">Edit author @Model.Name</h3>
        @Html.HiddenFor(m => Model.AuthorID)
        <div class="form-group">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-xl-6 col-sm-6 col-md-6 col-lg-6">
                <input class="btn btn-secondary" type="submit" value="Return" asp-controller="Author" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>