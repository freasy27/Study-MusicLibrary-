@model HomeViewModel
@{ 
    int availableMusics = Model.MusicCount - Model.LendMusicCount;
}

<h1>Library management dashboard</h1>
<div class="row">
    <div class="col-md-6">
        <div class="card bg-primary">
            <div class="card-header">
                Customer Count
            </div>
            <div class="card-body bg-light">
                There are @Model.CustomerCount customers
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-primary">
            <div class="card-header">
                Authors Count
            </div>
            <div class="card-body bg-light">
                There are @Model.AuthorCount authors
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-primary">
            <div class="card-header">
                Book count
            </div>
            <div class="card-body bg-light">
                There are @availableMusics musics available out of @Model.MusicCount musics
            </div>
        </div>
    </div>
</div>

    
